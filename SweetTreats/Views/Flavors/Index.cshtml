@{
  Layout = "_Layout";
}

@using SweetTreats.Models;
@model IEnumerable<SweetTreats.Models.Flavors>

<div class="container">

  <ul>
<li>@Html.ActionLink("Home", "Index", "Home" )</li>
<li>@Html.ActionLink("Treats", "Index", "Treats")</li>
<li>@Html.ActionLink("Flavors", "Index", "Flavors")</li>
<li>@Html.ActionLink("Register", "Register", "Account")</li>
<li>@Html.ActionLink("Log in", "Login", "Account")</li>
  </ul>


<h1>Flavors!</h1>

@if (Model.Any())
{
  <ul>
    @foreach (Flavors flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.FlavorsDescription}", "Details", new { id = flavor.FlavorsId })</li>
    }
  </ul>
} 
else
{
  <h3>No flavors have been added yet!</h3>
}

<p>@Html.ActionLink("Add new flavor (Account Required)" , "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>

</div>