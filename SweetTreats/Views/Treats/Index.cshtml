@{
  Layout = "_Layout";
}

@using SweetTreats.Models;
@model List<SweetTreats.Models.Treats>;

<div class="container">
  <ul>
<li>@Html.ActionLink("Home", "Index", "Home" )</li>
<li>@Html.ActionLink("Treats", "Index", "Treats")</li>
<li>@Html.ActionLink("Flavors", "Index", "Flavors")</li>
<li>@Html.ActionLink("Register", "Register", "Account")</li>
<li>@Html.ActionLink("Log in", "Login", "Account")</li>
  </ul>

<h1>Treats!</h1>

@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
} 
<ul>
@foreach (Treats treat in Model)
{
  <li>@Html.ActionLink($"{treat.TreatsName}", "Details", new { id = treat.TreatsId })</li>
}
</ul>

<p>@Html.ActionLink("Add new treat (Account Required)" , "Create")</p>

</div>